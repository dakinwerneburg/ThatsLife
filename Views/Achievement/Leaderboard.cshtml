@model List<ThatsLife.Models.PlayerRanking>

<div class=" row border shadow m-2 w-100 p-3">

    <div class="col-4 offset-4 ">
        <div><p class="pb-4 h1 text-center">LeaderBoard<p></div>
        <div class="table-responsive-sm">
            <table class="table table-striped">
                @if (Model != null)
                {
                    var rank = 1;
                    <thead class="thead-dark">
                        <tr scope="row" class="font-weight-bold">
                            <th scope="col">Ranking</th>
                            <th scope="col">ProfileName</th>
                            <th scope="col">Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var player in @Model)
                        {

                            <tr>
                                <th scope="row">@(rank++)</th>
                                <td>@player.ProfileName</td>
                                <td>@player.Score</td>
                            </tr>
                        }
                    </tbody>
                }
                else
                {
                    <thead>
                        <tr scope="row" class="font-weight-bold">
                            <th scope="col" class="text-right font-weight-bold">Ranking</th>
                            <th scope="col" class="text-right font-weight-bold">ProfileName</th>
                            <th scope="col" class="text-right font-weight-bold">Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var player in @Model)
                        {
                            <tr>
                                <th scope="row" class="font-weight-bold"></th>
                                <td class="font-weight-bold"></td>
                                <td class="font-weight-bold"></td>
                            </tr>
                        }
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>
